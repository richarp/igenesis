<%= form_for(@evento) do |f| %>
  <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :título %><br />
    <%= f.text_field :titulo, :placeholder=>"título", :autofocus=>"true", :required=>"true"  %>
  </div>
  <div class="field">
    <%= f.label :detalle %><br />
    <%= f.text_area :detalle, :placeholder=>"detalle", :required=>"true", :rows=>"3" %>
  </div>
  <div class="field">
    <%= f.label :fecha_de_inicio %><br />
    <%= f.date_select :fechai, :require=>"true" %>
  </div>
  <div class="field">
    <%= f.label :fecha_de_finalización %><br />
    <%= f.date_select :fechaf, :require=>"true" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
