<center>
  <%= image_tag "heroimage.jpg" %>
</center>
<div id="titulo"> Contáctenos   </div >
<br>
<%= form_for(@contacto) do |f| %>
  <% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contacto.errors.count, "error") %> prohibited this contacto from being saved:</h2>

      <ul>
      <% @contacto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.text_field :nombre, :placeholder=>"Nombre", :autofocus=>"true", :required=>"true", :title=>"Su nombre" %>
  </div>
    <div class="field">

      <%= f.text_field :email, :placeholder => "correo electrónico", :autofocus => "true", :required => "true", :type=>"email", :title=>"Correo electrónico" %>
    </div>
  <div class="field">

    <%= f.text_field :asunto , :placeholder=>"Asunto", :required=>"true", :title=>"Asunto de mensaje" %>
  </div>
  <div class="field">

    <%= f.text_area :mensaje, :placeholder=>"Mensaje", :required=>"true", :rows=>"3", :title=>"Escriba el mensaje que quieres enviar" %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar mensaje >>" %>
  </div>
<% end %>
<div id="flor"></div>


