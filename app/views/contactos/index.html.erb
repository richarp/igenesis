<h1>Mostrando contactos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Asunto</th>
    <th>Mensaje</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contactos.each do |contacto| %>
  <tr>
    <td><%= contacto.nombre %></td>
    <td><%= contacto.asunto %></td>
    <td><%= contacto.mensaje %></td>
    <td><%= link_to 'Ver', contacto %></td>
    <td><%= link_to 'Editar', edit_contacto_path(contacto) %></td>
    <td><%= link_to 'Eliminar', contacto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo  Contacto', new_contacto_path %>
